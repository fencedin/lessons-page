<h1>Edit <%= @section.name %></h1>

<% if @section.errors.any? %>
  <h3>Please Fix These Errors</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
      <li><%= message %>
    <% end %>
  </ul>
<% end %>

<br>
<form action="/sections/<%= @section.url_name %>" method="post">
  <div class="col-md-6">
    <input name="_method" type="hidden" value="patch">
    <label for="section_name">Name of Section</label>
    <input class="form-control" id="section_name" name="section[name]" type="text" value="<%= @section.name %>" placeholder="Type name here..."><br>
  </div>
  <div class="col-md-6">
    <label for="section_number">Number of Section</label>
    <input class="form-control" id="section_number" name="section[number]" type="number"  value="<%= @section.number %>" placeholder="The last section number was <%= Section.maximum("number") %>"><br>
  </div>
  <button class="btn btn-primary">Update Section</button>
</form>
<br>
<p><a href="/">Back to Table of Contents</a></p>
