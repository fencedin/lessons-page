<h1>Edit <%= @chapter.name %></h1>

<% if @chapter.errors.any? %>
  <h3>Please Fix These Errors</h3>
  <ul>
    <% @chapter.errors.full_messages.each do |message| %>
      <li><%= message %>
    <% end %>
  </ul>
<% end %>

<br>
<form action="/chapters/<%= @chapter.url_name %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="chapter_name">Name of Chapter</label>
  <input class="form-control" id="chapter_name" name="chapter[name]" type="text" value="<%= @chapter.name %>" placeholder="Type name here..."><br>
  <button class="btn btn-primary">Update Chapter</button>
</form>
<br>
<p><a href="/">Back to Table of Contents</a></p>
