<h1>Table of contents</h1>
<br><br>
<ul>
  <% @chapters.each do |chapter| %>
    <li><a href="/chapters/<%= chapter.url_name %>"><%= chapter.name %></li>
    <ul>
      <% chapter.sections.sort_by! { |i| i.number } %>
      <% chapter.sections.each do |section| %>
        <li><a href="/sections/<%= section.url_name %>"><%= section.name %></li>
        <ul>
          <% section.lessons.sort_by! { |i| i.number } %>
          <% section.lessons.each do |lesson| %>
            <li><a href="/lessons/<%= lesson.url_name %>"><%= lesson.name %></a></li>
          <% end %>
        </ul>
      <% end %>
    </ul>
  <% end %>
</ul>
<br><br>
<p><a href="/lessons/new" class="btn btn-info">Create a New Lesson</a></p>
<p><a href="/sections/new" class="btn btn-info">Create a New Section</a></p>
<p><a href="/chapters/new" class="btn btn-info">Create a New Chapter</a></p>

