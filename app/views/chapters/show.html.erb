<h1><%= @chapter.name %></h1>
<ul>
  <% @chapter.sections.each do |section| %>
    <li><a href="/sections/<%= section.url_name %>"><%= section.name %></li>
    <ul>
      <% section.lessons.each do |lesson| %>
        <li><a href="/lessons/<%= lesson.url_name %>"><%= lesson.name %></a></li>
      <% end %>
    </ul>
  <% end %>
</ul>
<p>
  <a href="/chapters/<%= @chapter.url_name %>/edit" class="btn btn-primary">Edit Chapter</a>
  <a href="/chapters/<%= @chapter.url_name %>/" class="btn btn-danger"
    data-confirm="WARNING: This will delete all lessons and sections under this chapter. This connot be un-done! Are you sure you want to delete?"
    data-method="delete"
    rel="nofollow">Delete Chapter</a>
</p>
<p><a href="/lessons/new" class="btn btn-info">Create a New Lesson</a></p>
<p><a href="/sections/new" class="btn btn-info">Create a New Section</a></p>
<p><a href="/">Back to Table of Contents</a></p>
